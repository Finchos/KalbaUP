<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalbAPP.MainPage"
             xmlns:viewmodel="clr-namespace:KalbAPP.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    
    

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#FF8C00" Offset="0.0"/>
            <GradientStop Color="#FFD700" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="2*, 3*">
        
        <!-- Top Section: Logo & Title -->
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo2.png" WidthRequest="360" HeightRequest="360"/>
        </VerticalStackLayout>

        <!-- Bottom Section: Start Game Button -->
        <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,40">
            <Button Text="Start Game"
                    FontFamily="BananaStick"
                    FontSize="24"
                    Padding="15"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    CornerRadius="30"
                    WidthRequest="200"
                    Command="{Binding StartApplicationCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
